@model User

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="card-title">Login</div>

    <form asp-asp-controller="Auth" asp-action="Login" class="login-card">
        <div class="card-main">
            <div class="input-area">
                <label for="Title">Email</label>
                <input class="form-control" placeholder="Enter your Email" />
            </div>
            <div class="input-area">
                <label for="Title">Password</label>
                <input class="form-control" placeholder="Enter your Password" />
            </div>
            <a asp-controller="Story" asp-action="Index" class="btn btn-cancel">Cancel</a>
            <a asp-action="Login" type="submit" class="btn btn-publish">Login</a>
        </div>
    </form>
</div>